
<header class="jumbotron">
  <div class="container">
    <h1>Places You've Been</h1>
  </div>
</header>



<div class="row">
  <div class="container">
    <div class="question col-sm-6">
      <h2>Where y'all been?</h2>
      <hr>

      <form action="/places" method="post">
        <div class="form-group">
          <label for="location">Location:</label>
          <input class="form-control" placeholder="Enter Location Here" id="location" name="location" type="text">
        </div>
        <button type="submit" class="btn btn-success">Enter</button>
      </form>
    </div>

    <div class="list col-sm-6">
      <h2>Been here:</h2>
      <hr>
      <form class="clear-btn" action="/" method="post">
        <button type="submit" class="btn btn-danger">Clear</button>
      </form>
      <ul>
        <% @places.each() do |location| %>
          <li><%= location.places() %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
